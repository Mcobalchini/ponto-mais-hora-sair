{
  "name": "Hora sair - Ponto Mais Web",
  "version": "2.0",
  "description": "Extens√£o para calcular a hora que pode sair baseado nos pontos do ponto mais web.",
  "permissions": [
    "declarativeContent",
    "tabs",
    "activeTab",
    "*://*.pontomaisweb/*",
    "*://*.pontomais/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["*://*.pontomaisweb.com.br/*", "*://*.pontomais.com.br/*"],
      "js": [
        "sweetalert2.all.min.js",
        "content-page.js"]
    }
],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {},
  "web_accessible_resources": ["https://cdn.jsdelivr.net/npm/sweetalert2@11.4.0/dist/sweetalert2.all.min.js","images/loading.gif"],
  "icons": {
    "16": "images/favicon.png",
    "32": "images/favicon.png",
    "48": "images/favicon.png",
    "128": "images/favicon.png"
  },
  "manifest_version": 2
}
